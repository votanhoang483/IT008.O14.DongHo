<UserControl x:Class="DoAn_LT.ChildViews.Alarm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAn_LT.ChildViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Beige">
        <ScrollViewer Margin="8,0,0,0" Height="450" Grid.Column="1">
            <WrapPanel x:Name="ListAlarm" Width="798" Height="450" >
                <Grid Background="Beige" Height="150" Width="266">
                    <Grid Background="White" Margin="10,10,10,10">
                        <Button x:Name="AddNewAlarm" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Width="30" FontSize="20" Click="AddNewAlarm_Click"  >
                            <Image Source="..\Assets\Images\Add Timer\add.jpg"/>
                        </Button>
                        <Label Margin="0,80,0,0" Content="Click to add new alarm!" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30">

                        </Label>
                    </Grid>


                </Grid>
            </WrapPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
