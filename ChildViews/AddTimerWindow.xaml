<Window x:Class="DoAn_LT.ChildViews.AddTimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoAn_LT.ChildViews"
        mc:Ignorable="d"
        Height="270" Width="300">
    <Grid>
        <WrapPanel>
            <TextBlock VerticalAlignment="Top"
                       HorizontalAlignment="Left" 
                       DockPanel.Dock="Top" 
                       Text="Add new timer" 
                       Height="30" 
                       Width="280"
                       Margin="10"
                       FontSize="20">

            </TextBlock>

            <StackPanel Orientation="Vertical">
                <DockPanel>
                    <Button Height="20"
                            Width="20"
                            Margin="40 0">

                    </Button>
                    <Button Height="20"
                            Width="20"
                            Margin="40 0">

                    </Button>
                    <Button Height="20"
                            Width="20"
                            Margin="30 0">

                    </Button>
                </DockPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBox Height="40"
                             Width="90"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                             Text="00"
                             FontSize="20"
                             Margin="5 0">
                        
                    </TextBox>
                    <TextBox Height="40"
                               Width="10"
                               Text=":"
                               FontSize="20"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center">
                        
                    </TextBox>
                    <TextBox Height="40"
                             Width="80"
                             HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Text="00"
                            FontSize="20"
                            Margin="0">
                        
                    </TextBox>
                    <TextBox Height="40"
                            Width="10"
                            Text=":"
                            FontSize="20"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                        
                    </TextBox>
                    <TextBox Height="40"
                             Width="90"
                             HorizontalContentAlignment="Center"
                             VerticalContentAlignment="Center"
                            Text="00"
                            FontSize="20"
                            Margin="5 0 10 0">
                        
                    </TextBox>
                </StackPanel>

                <DockPanel>
                    <Button Height="20"
                            Width="20"
                            Margin="40 0">

                    </Button>
                    <Button Height="20"
                            Width="20"
                            Margin="40 0">

                    </Button>
                    <Button Height="20"
                            Width="20"
                            Margin="30 0">

                    </Button>
                </DockPanel>

            </StackPanel>


            <WrapPanel Height="40"
                       Width="300"
                       Margin="0 10">
                <Image Height="30"
                       Width="40"
                       Margin="5"
                       Source="..\Assets\Images\Timer\Clipboard.png">

                </Image>
                <TextBox Height="30"
                         Width="230"
                         Text="Timer(1)"
                         FontSize="20"
                         TextChanged="TextBox_TextChanged">


                </TextBox>


            </WrapPanel>
            <StackPanel Height="50"
                        Width="300"
                        Orientation="Horizontal">
                <Button Height="30"
                        Width="100"
                        Margin="30 10 25 10"
                        HorizontalAlignment="Center">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Height="20" 
                                   HorizontalAlignment="Center" 
                                   Source="../Assets/Images/Timer/Save.png" 
                                   Stretch="Uniform" 
                                   Margin="20 0 0 0"/>
                            <Label Height="25"
                                   Width="65"
                                   Margin="5 0 0 0"
                                   Content="Save"
                                   
                                   >

                            </Label>
                        </StackPanel>
                    </Button.Content>

                </Button>
                <Button Height="30"
                        Width="100"
                        Margin="10 10 25 10"
                        HorizontalAlignment="Right">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Height="15" 
                                   HorizontalAlignment="Center" 
                                   Source="../Assets/Images/Timer/Cancel.png" 
                                   Stretch="Uniform" 
                                   Margin="5 0 0 0"/>
                            <Label Height="25"
                                   Width="65"
                                   Margin="0 0 0 0"
                                   Content="Cancel" >

                            </Label>
                        </StackPanel>
                    </Button.Content>
                        

                </Button>

            </StackPanel>

        </WrapPanel>
    </Grid>
</Window>
